---
import bgImageLoadingPlaceholder from '@/assets/baackground-blur.gif'
import bgImage from '@/assets/baackground.png'
import { Image } from 'astro:assets'
---

<Image
	class="fixed inset-0 w-screen h-screen object-cover object-center z-10 blur bg-[#c8c5cb]"
	src={bgImageLoadingPlaceholder}
	alt="Florian Kilian Jaritz's background image blurred loading placeholder"
/>
<Image
	class="fixed inset-0 w-screen h-screen object-cover object-center z-20 opacity-0 transition-opacity duration-1000"
	src={bgImage}
	alt="Florian Kilian Jaritz's background image"
	id="bg-image"
/>

<script>
	const bgImage = document.getElementById('bg-image') as HTMLImageElement
	bgImage.addEventListener('load', revealImage)

	function revealImage() {
		bgImage.classList.add('opacity-100')
	}
</script>
